name: JIRA Issue Status Check

on:
  pull_request:
    branches:
      - main

jobs:
  check-jira-issue:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository content
      uses: actions/checkout@v2

    - name: Extract Jira Issue ID from PR title
      id: extract_issue_id
      run: |
        JIRA_REGEX='\bCM-[0-9]+\b'
        PR_TITLE="${{ github.event.pull_request.title }}"
        
        if echo "$PR_TITLE" | grep -iqE "$JIRA_REGEX"; then
          ISSUE_ID=$(echo "$PR_TITLE" | grep -oE "$JIRA_REGEX" | head -n 1)
          echo "JIRA issue ID: $ISSUE_ID"
          echo "issue_id=$ISSUE_ID" >> $GITHUB_ENV
        else
          echo "ERROR: No valid JIRA issue identifier found in PR title."
          exit 1
        fi

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '20'

    - name: Install dependencies
      run: npm install

    - name: Check Jira Issue Status
      id: check_issue_status
      env:
        EMAIL: ${{ secrets.EMAIL }}
        API_TOKEN: ${{ secrets.API_TOKEN }}
        ISSUE_ID: ${{ env.issue_id }}
      run: node index.js

    - name: Mark PR check as passed or failed
      if: always()
      run: |
        if [ -f jira_issue_status_passed ]; then
          echo "Jira issue status check passed."
        else
          echo "Jira issue status check failed."
          exit 1
        fi
